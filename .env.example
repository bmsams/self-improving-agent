# Self-Improving Agent â€” Environment Variables
# Copy this to .env and fill in your values

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Optional: LLM provider (anthropic, bedrock, mock)
AGENT_PROVIDER=anthropic

# Optional: Override model name
# AGENT_MODEL=claude-sonnet-4-5-20250929

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
AGENT_LOG_LEVEL=INFO

# Optional: Max generations for loop mode
# AGENT_MAX_GENERATIONS=100

# Optional: Auto-merge without review gate
# AGENT_AUTO_MERGE=false

# Optional: AWS Bedrock AgentCore
# AGENTCORE_ENABLED=false
# AGENTCORE_REGION=us-east-1
# AGENTCORE_MEMORY_ID=              # From CDK stack output
# AGENTCORE_CODE_INTERPRETER_ID=    # From CDK stack output
# AGENTCORE_GATEWAY_ID=             # If using AgentCore Gateway
# AGENTCORE_POLICY_STORE_ID=        # If using AgentCore Policy

# Optional: GitHub integration
# GITHUB_ENABLED=false
# GITHUB_TOKEN=ghp_your-github-token
# GITHUB_REPO=owner/repo
# GITHUB_AUTO=false
